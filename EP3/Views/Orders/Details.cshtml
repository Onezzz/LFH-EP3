@model EP3.Models.Order

@{
  ViewData["Title"] = "Details";
}

<h1>Order #@Model.Id</h1>

<div> 
  <dl class="row">
    <dt class="col-sm-2">
      Customer
    </dt>
    <dd class="col-sm-10">
      @Model.Customer.Name
    </dd>
  </dl>
  <dl class="row">
    <dt class="col-sm-2">
      @Html.DisplayNameFor(model => model.OrderDate)
    </dt>
    <dd class="col-sm-10">
      @Html.DisplayFor(model => model.OrderDate)
    </dd>
  </dl>
</div>


<h4>Line Items</h4>

<table class="table">
  <thead>
    <tr>
      <th>No.</th>
      <th>Product</th>
      <th>Price</th>
      <th>Quantity</th>
      <th class="text-right">Total</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @{ 
      int row = 0;
    }
    @foreach (var line in Model.LineItems)
    {
      <tr>
        <td>@(++row)</td>
        <td>@line.Item.Name</td>
        <td>@line.Item.Price</td>
        <td>@line.Quantity</td>
        <td class="text-right">@line.Total.ToString("n2")</td>
        <td></td>
      </tr>
    }
  </tbody>
  <tfoot>
    <tr>
      <td colspan="3"></td>
      <td>Sub total</td>
      <td class="text-right">@Model.SubTotal.ToString("n2")</td>
      <td></td>
    </tr>
    <tr>
      <td colspan="3"></td>
      <td>VAT 7%</td>
      <td class="text-right">@Model.VatAmount.ToString("n2")</td>
      <td></td>
    </tr>
    <tr>
      <td colspan="3">
        (@Model.NetTotal.ThaiBahtText())
      </td>
      <td>Net total</td>
      <td class="text-right">@Model.NetTotal.ToString("n2")</td>
      <td></td>
    </tr>
  </tfoot>

</table>


<div>
  <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
  <a asp-action="Index">Back to List</a>
</div>
